<div class="col-sm-12">
    <form ref="form" class="form-inline">
        <div class="form-group">
            <input ref="todoTask" type="text" class="form-control" placeholder="New todo" />
            <button type="submit" onClick={this.addTodo}>Add</button>
        </div>
    </form>
    <ul class="col-sm-11 col-sm-offset-1">
        <w-loop items=this.state.todos as="item" index="i">
            <li>
                <w-if cond="item.id">({item.id})</w-if> {item.task}
                <w-if cond="item.id">
                    <span onClick={this.removeTodo.bind(this, i)}>[x]</span>
                <w-else/>
                    [Saving...]
                </w-if>
            </li>
        </w-loop>
    </ul>
</div>